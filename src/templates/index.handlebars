<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <base href="/">
    <title>Stereo Cause</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    
    <!-- Styles -->
    <link href="styles/reset.css" rel="stylesheet" type="text/css">
    <link href="styles/style.css" rel="stylesheet" type="text/css">

    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

  </head>
  <body>
    <h1>nav bar</h1>
    
    <h1>title</h1>

    <div id="artists" class="container artists-and-charities">
      <p class="section-title">Meet the artists:</p>
      <p class="section-body">{{ cause.artistsDescription }}</p>
  
        {{#each albums}}
        <div class="card">
          <img ng-src={{ coverImage }}
               alt="{{ name }}">
          <div class="card-text">
            <p class="card-title">{{ name }}</p>
            <p class="card-body">{{ artist }}</p>
            <p><i class="fa fa-unlock-alt"></i></p>
          </div>
        </div>

        {{/each}}
    </div>

    <h1>charities</h1>
    
    <h1>stats - react</h1>
    
    <h1>form - react</h1>
    
    <h1>footer</h1>
  
  </body>
</html>