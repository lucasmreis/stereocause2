<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <base href="/">
    <title>Stereo Cause</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    
    <!-- Styles -->
    <link href="styles/reset.css" rel="stylesheet" type="text/css">
    <link href="styles/style.css" rel="stylesheet" type="text/css">

    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

  </head>
  <body>
    <h1>nav bar</h1>
    
    <h1>title</h1>

    <div id="artists" class="container artists-and-charities">
      <p class="section-title">Meet the artists:</p>
      <p class="section-body">{{ artistsDescription }}</p>
        
      <ul class="card-list">
        {{#each albums}}
        <li class="card">
          <div class="card-wrapper">
            <img src="{{ coverImage }}"
                 alt="{{ name }}">
            <div class="card-text">
              <p class="card-title">{{ name }}</p>
              <p class="card-body">{{ artist }}</p>
              <p class="lock">
                {{#if premium}}
                  <i class="fa fa-lock locked"></i>
                {{else}}
                  <i class="fa fa-unlock-alt not-locked"></i>
                {{/if}}
              </p>
            </div>
          </div>
        </li>

        {{/each}}
      </ul>
    </div>

    <h1>charities</h1>
    
    <h1>stats - react</h1>
    
    <h1>form - react</h1>
    
    <h1>footer</h1>
  
  </body>
</html>