<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <base href="/">
    <title>Stereo Cause</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    
    <!-- Styles -->
    <link href="styles/reset.css" rel="stylesheet" type="text/css">
    <link href="styles/style.css" rel="stylesheet" type="text/css">

    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

  </head>
  <body>

    <div class="upper-bar">
      <div class="upper-bar-wrapper">
        <a href="#"><i class="fa fa-dot-circle-o"></i></a>
      </div>
    </div>
    
    <div class="title">
      <h1>NEW MUSIC <span class="and">&</span> GREAT CAUSES</h1>

      <h2>Stereo Cause lets you discover 
        <a class="title-link" 
           href="#artists">new music</a> and help 
        <a class="title-link" 
           href="#charities">important causes</a> by making 
        <a class="title-link" 
           href="#contribute">charitable contributions</a>.
      </h2>

      <div class="title-button-wrapper">
        <a class="title-button" href="#artists">Let's get started</a>
      </div>
    </div>

    <div id="artists" class="container artists-and-charities">
      <p class="section-title">Meet the artists:</p>
      <p class="section-body">{{ artistsDescription }}</p>
      
      {{#each albums}}
      <div class="artist-detail" id="{{ id }}">
        <img src="assets/images/{{ artistImage }}"
             alt="{{ artist }}">
        <h1>{{ artist }}</h1>
        <h1>DECIDIR LAYOUT</h1>
        <p>{{{ bigDescription }}}</p>
        {{#each tracks}}
        <p>{{ number }} - {{ title }}</audio></p>
        {{/each}}
      </div>
      {{/each}}

      <ul class="card-list">
        {{#each albums}}
        <li class="card" onclick="toggleDetails('{{ id }}')">
          <div class="card-wrapper">
            <img src="assets/images/{{ coverImage }}"
                 alt="{{ name }}">
            <div class="card-text">
              <p class="card-title">{{ name }}</p>
              <p class="card-body">{{ artist }}</p>
              <p class="lock">
                {{#if premium}}
                  <i class="fa fa-lock locked"></i>
                {{else}}
                  <i class="fa fa-unlock-alt not-locked"></i>
                {{/if}}
              </p>
            </div>
          </div>
        </li>

        {{/each}}
      </ul>
    </div>

    <div id="charities" class="container artists-and-charities">
      <p class="section-title">Learn about the charities:</p>
      <p class="section-body">{{ charitiesDescription }}</p>
        
      <ul class="card-list">
        {{#each charities}}
        <li class="card charity">
          <div class="card-wrapper">
            <img src="assets/images/{{ image }}"
                 alt="{{ name }}">
            <div class="card-text">
              <p class="card-title">{{ name }}</p>
              <p class="card-body">{{{ description }}}</p>
            </div>
          </div>
        </li>

        {{/each}}
      </ul>
    </div>
    
    <div id="sc-form"></div>
    
    <div class="container footer">
      <p>
        Stereo Cause
        &nbsp;&nbsp;/&nbsp;&nbsp;
        Feito com <i class="fa fa-heart"></i> no Rio e em Miami
        &nbsp;&nbsp;/&nbsp;&nbsp;
        Made with <i class="fa fa-heart"></i> in Rio and Miami
        &nbsp;&nbsp;/&nbsp;&nbsp;
        <i class="fa fa-copyright"></i>&nbsp;2015
      </p>
    </div>
  
    <script>
      var openDetailState = null;

      var toggleDetails = function(id) {
        var hide = function(e) {
          e.style['max-height'] = '0px';
          e.style['opacity'] = 0;
          e.style['z-index'] = -100;
        };

        var show = function(e) {
          e.style['max-height'] = '30000px';
          e.style['opacity'] = 1;
          e.style['z-index'] = 0;
        };

        var elems = document.getElementsByClassName('artist-detail');
        
        var i = 0;
        for (i = 0; i < elems.length; i++) {
          hide(elems[i]);
        }
        if (openDetailState !== id) {
          show(document.getElementById(id));
          openDetailState = id;
        } else {
          hide(document.getElementById(id));
          openDetailState = null;
        }
      };
    </script>

    <script type="text/javascript" src="app.js"></script>
  </body>
</html>